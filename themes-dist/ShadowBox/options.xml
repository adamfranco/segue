<options>
	<option id='bg_color'>
		<displayName lang='en_US'>Background Color</displayName>
		<description lang='en_US'>The color-scheme of the site border.</description>
		<choice>
			<key>white</key>
			<label lang='en_US'>White</label>
			<setting marker='[[IMAGE_DIR]]'>white</setting>
			<setting marker='[[BG_COLOR]]'>#FFFFFF</setting>
		</choice>
		<choice isDefault='true'>
			<key>yellow</key>
			<label lang='en_US'>Yellow</label>
			<setting marker='[[IMAGE_DIR]]'>yellow</setting>
			<setting marker='[[BG_COLOR]]'>#FFFFCC</setting>
		</choice>
	</option>
	<option id='fg_color'>
		<displayName lang='en_US'>Forground Color</displayName>
		<description lang='en_US'>The color-scheme of the site-content area.</description>
		<choice isDefault='true'>
			<key>white</key>
			<label lang='en_US'>White</label>
			<setting marker='[[FG_COLOR]]'>#FFFFFF</setting>
		</choice>
		<choice>
			<key>yellow</key>
			<label lang='en_US'>Yellow</label>
			<setting marker='[[FG_COLOR]]'>#FFFFCC</setting>
		</choice>
	</option>
	<option id='text_color'>
		<displayName lang='en_US'>Text Color</displayName>
		<description lang='en_US'>The color or normal text.</description>
		<choice isDefault='true'>
			<key>black</key>
			<label lang='en_US'>Black</label>
			<setting marker='[[TEXT_COLOR]]'>#000000</setting>
		</choice>
		<choice>
			<key>white</key>
			<label lang='en_US'>White</label>
			<setting marker='[[TEXT_COLOR]]'>#FFFFFF</setting>
		</choice>
		<choice>
			<key>green</key>
			<label lang='en_US'>Green</label>
			<setting marker='[[TEXT_COLOR]]'>#009900</setting>
		</choice>
	</option>
	<option id='link_color'>
		<displayName lang='en_US'>Link Color</displayName>
		<description lang='en_US'>The color of link-text.</description>
		<choice>
			<key>blue</key>
			<label lang='en_US'>Blue</label>
			<setting marker='[[LINK_COLOR]]'>#000099</setting>
		</choice>
		<choice isDefault='true'>
			<key>red</key>
			<label lang='en_US'>Red</label>
			<setting marker='[[LINK_COLOR]]'>#990000</setting>
		</choice>
	</option>
</options>